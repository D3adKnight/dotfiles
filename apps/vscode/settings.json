{
  "workbench.iconTheme": "vscode-icons",

  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",

  "files.trimTrailingWhitespace": true,

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.shell.osx": "/bin/zsh",

  "breadcrumbs.enabled": true,

  "npm.exclude": "**/node_modules.nosync/**",
  "typescript.tsc.autoDetect": "off",

  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[reason]": {
    "editor.defaultFormatter": "jaredly.reason-vscode",
  },
  "reason_language_server.per_value_codelens": true,
  "reason_language_server.opens_codelens": true,
  "files.exclude": {
    "**/node_modules": true
  },
  "workbench.colorTheme": "Winter is Coming (Dark Black)",
}
